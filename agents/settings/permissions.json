{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Shared permission rules for agentic development tools",
  "version": "1.0.0",
  "permissions": {
    "skills": {
      "description": "Control which skills can be loaded",
      "rules": {
        "*": "allow",
        "internal-*": "deny"
      }
    },
    "bash": {
      "description": "Control which bash commands can be executed",
      "defaultBehavior": "ask",
      "safeCommands": [
        "git status",
        "git status *",
        "git diff",
        "git diff *",
        "git log",
        "git log *",
        "git show",
        "git show *",
        "git branch",
        "git branch --list *",
        "git remote -v",
        "git remote show *",
        "git tag",
        "git tag --list *",
        "git stash list",
        "git blame *",
        "git shortlog *",
        "git describe *",
        "git rev-parse *",
        "git ls-files *",
        "git ls-tree *",
        "git cat-file *",
        "git config --get *",
        "git config --list",
        "ls *",
        "cat *",
        "head *",
        "tail *",
        "grep *",
        "find *",
        "echo *",
        "pwd",
        "whoami",
        "date",
        "env"
      ],
      "buildCommands": [
        "npm run *",
        "npm test *",
        "npm install",
        "npm ci",
        "pnpm *",
        "yarn *",
        "bun *",
        "cargo build *",
        "cargo test *",
        "cargo check *",
        "go build *",
        "go test *",
        "go mod *",
        "python -m pytest *",
        "python -m pip install *",
        "uv *",
        "dotnet build *",
        "dotnet test *",
        "dotnet restore *",
        "make *",
        "cmake *"
      ],
      "dangerousCommands": [
        "rm -rf /",
        "rm -rf /*",
        "rm -rf ~",
        "rm -rf ~/*",
        "sudo *",
        "chmod 777 *",
        "curl * | bash",
        "curl * | sh",
        "wget * | bash",
        "wget * | sh",
        "eval *",
        "> /dev/sda*",
        "mkfs *",
        "dd if=*",
        ":(){:|:&};:"
      ],
      "gitDestructiveCommands": {
        "description": "Git commands that modify history, switch context, or can lose work. Denied by default.",
        "commands": [
          "git commit *",
          "git commit",
          "git add *",
          "git add .",
          "git checkout *",
          "git switch *",
          "git branch -d *",
          "git branch -D *",
          "git branch --delete *",
          "git merge *",
          "git rebase *",
          "git reset *",
          "git reset",
          "git revert *",
          "git cherry-pick *",
          "git stash",
          "git stash *",
          "git stash drop *",
          "git stash pop *",
          "git stash clear",
          "git clean *",
          "git restore *",
          "git push *",
          "git push",
          "git pull *",
          "git pull",
          "git fetch *",
          "git clone *",
          "git init *",
          "git init",
          "git rm *",
          "git mv *",
          "git tag -d *",
          "git tag --delete *",
          "git tag -a *",
          "git tag -s *",
          "git worktree *",
          "git submodule *",
          "git bisect *",
          "git reflog expire *",
          "git gc *",
          "git prune *",
          "git filter-branch *",
          "git update-ref *",
          "git replace *",
          "git notes *",
          "git config --global *",
          "git config --system *",
          "git config --unset *",
          "git config user.*",
          "git remote add *",
          "git remote remove *",
          "git remote rename *",
          "git remote set-url *"
        ]
      }
    },
    "files": {
      "description": "Control which files can be read or modified",
      "sensitivePatterns": [
        ".env",
        ".env.*",
        "*.pem",
        "*.key",
        "*_rsa",
        "id_*",
        "*.p12",
        "*.pfx",
        "credentials*",
        "secrets*",
        "*password*",
        "*token*"
      ],
      "readOnlyPatterns": [
        "node_modules/**",
        ".git/objects/**",
        "vendor/**",
        "dist/**",
        "build/**"
      ]
    },
    "subagents": {
      "description": "Control which subagents can be spawned",
      "rules": {
        "*": "allow"
      }
    }
  },
  "notes": {
    "usage": "These rules are tool-agnostic templates. Copy relevant sections to your tool's settings format.",
    "customization": "Override in project-specific settings or local config files."
  }
}
