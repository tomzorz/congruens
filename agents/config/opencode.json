      "git filter-branch *": "deny",
      "git update-ref *": "deny",
      "git replace *": "deny",
      "git notes *": "deny",
      "git config --global *": "deny",
      "git config --system *": "deny",
      "git config --unset *": "deny",
      "git config user.*": "deny",
      "git remote add *": "deny",
