{
  "name": "gh",
  "description": "GitHub CLI for managing repos, issues, and PRs from the terminal",
  "homepage": "https://cli.github.com",
  "install": {
    "windows": {
      "winget": "GitHub.cli",
      "choco": "gh"
    },
    "macos": {
      "brew": "gh"
    },
    "linux": {
      "apt": "gh",
      "dnf": "gh",
      "pacman": "github-cli"
    }
  },
  "verify": "gh --version"
}
