{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "description": "Default agent for development work with full tool access"
    },
    "plan": {
      "mode": "primary",
      "description": "Analysis and planning mode without making changes",
      "permission": {
        "edit": "ask",
        "bash": {
          "*": "ask",
          "git status": "allow",
          "git diff *": "allow",
          "git log *": "allow"
        }
      }
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "bash": {
      "*": "ask",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git branch": "allow",
      "git branch --list *": "allow",
      "git remote -v": "allow",
      "git remote show *": "allow",
      "git tag": "allow",
      "git tag --list *": "allow",
      "git stash list": "allow",
      "git blame *": "allow",
      "git shortlog *": "allow",
      "git describe *": "allow",
      "git rev-parse *": "allow",
      "git ls-files *": "allow",
      "git ls-tree *": "allow",
      "git cat-file *": "allow",
      "git config --get *": "allow",
      "git config --list": "allow",
      "git commit *": "deny",
