      "git cherry-pick *": "deny",
      "git stash": "deny",
      "git stash drop *": "deny",
      "git stash pop *": "deny",
      "git stash clear": "deny",
      "git stash push *": "deny",
      "git stash save *": "deny",
      "git clean *": "deny",
      "git restore *": "deny",
      "git push *": "deny",
      "git push": "deny",
      "git pull *": "deny",
      "git pull": "deny",
      "git fetch *": "deny",
      "git clone *": "deny",
